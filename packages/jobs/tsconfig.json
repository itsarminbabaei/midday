{
  "extends": "@travelese/tsconfig/base.json",
  "include": ["src", "trigger.config.ts"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "baseUrl": ".",
    "paths": {
      "@travelese/invoice/*": ["../invoice/src/*"],
      "@travelese/supabase/server": ["../supabase/src/client/server.ts"],
      "@/*": ["./src/*"]
    }
  }
}
